{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "description": "Database layer with Drizzle ORM for x402 Learning Lab",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js"
    },
    "./migrations": {
      "types": "./dist/migrations.d.ts",
      "import": "./dist/migrations.mjs",
      "require": "./dist/migrations.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo 'Skipping package-level lint - use root lint command'",
    "lint:fix": "echo 'Skipping package-level lint - use root lint command'",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@repo/shared": "file:../shared",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@repo/tsconfig": "file:../tsconfig",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.24.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}
