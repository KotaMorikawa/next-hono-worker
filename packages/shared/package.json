{
  "name": "@repo/shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared types and validation schemas for x402 Learning Lab",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.mjs",
      "require": "./dist/auth.js"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.mjs",
      "require": "./dist/api.js"
    },
    "./x402": {
      "types": "./dist/x402.d.ts",
      "import": "./dist/x402.mjs",
      "require": "./dist/x402.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo 'Skipping package-level lint - use root lint command'",
    "lint:fix": "echo 'Skipping package-level lint - use root lint command'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@repo/tsconfig": "file:../tsconfig",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}
