# ワークスペース設定
hoist-pattern[]=*eslint*
hoist-pattern[]=*prettier*
hoist-pattern[]=*typescript*
hoist-pattern[]=*@types*
hoist-pattern[]=*turbo*

# 厳密な peer dependencies チェック
strict-peer-deps=true

# パッケージロック戦略
package-lock=true

# Node.js バージョン管理
engine-strict=true

# ログレベル
loglevel=warn

# レジストリ設定
registry=https://registry.npmjs.org/

# セキュリティ
audit-level=moderate
fund=false